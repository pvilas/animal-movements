{% macro render_video(name) %}  
<video width="100%" height="100%" max-width="100%"
    muted preload="none" controls allowfullscreen
    style="object-fit:fill;"
    poster="/img/posters/videos/{{name}}.png.jpg"
    id="video-{{name}}"
    >
    <source src="/video/{{name}}.mp4" type="video/mp4">  
    Tu navegador no soporta la etiqueta video.
</video>
{%endmacro%}



{% macro make_card(p, base_thumbs) %}
  {# p es una pagina - make_card hace la carta con la foto y el enlace #}
  {% set nom_pag = p.abs_url.split('/')[-2] %} {# nombre de la p치gina coincide con el nombre del video y de la imagen del poster #}

  {% if not p.is_index %}
  <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4" onclick="window.location.href ='{{p.abs_url}}'">
      <div class="mdc-card">         
          <div class="mdc-card__primary-action demo-card__primary-action" tabindex="0">              
              <div class="mdc-card__media mdc-card__media--16-9 demo-card__media" style="background-image: {%if base_thumbs%}url(&quot;{{base_thumbs}}{{nom_pag}}.png&quot;);{%else%}url(&quot;/img/posters/thumbs/{{nom_pag}}.png.jpg&quot;);{%endif%}"></div>
              <div class="demo-card__primary">
                  <h3 class="demo-card__title mdc-typography mdc-typography--headline6">{{p.title}}</h3>
              </div>                      
          </div>
      </div>
  </div>        
  {% endif %}
{% endmacro %}


{% macro render_sect(children, page_url) %}
    {% for p in children %}
      {% if not p.is_section %} {# no es una secci칩n #}
        {% if p.url!=page_url %} {# si no es la p치gina actual #}
          {{make_card(p)}}
        {% endif %}
      {% endif %} {# es una secci칩n #}
    {% endfor %}
{% endmacro %}

{% macro render_cards(children, page_url, base_thumbs)%}
<div class="mdc-layout-grid">
  <div class="mdc-layout-grid__inner">  
  {{render_sect(children, page_url)}}
  </div>
</div>
<div>
{% for p in children %}
  {% if p.is_section %}
    <h3>{{p.title}}</h3>    
    <div class="mdc-layout-grid">
      <div class="mdc-layout-grid__inner">
        {% for r in p.children %}
          {% set nom_pag = r.abs_url.split('/')[-2] %}
          {% set l = r.abs_url.split('/')|length %}
          {% if l>4 %}                        
            {{make_card(r, base_thumbs)}}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
{% endfor %}
</div>
{% endmacro %}

{% macro pon_fuente(autor, titulo, url)%}
<small>{{autor}}: [{{titulo}}]({{url}}){: target=_blank }</small>
{% endmacro %}